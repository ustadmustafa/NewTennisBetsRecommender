@model List<merzigo.bms.tennis.Models.Standings>
@{
    ViewData["Title"] = "Tennis Standings";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Tennis Rankings & Standings</h2>
            
            @if (Model != null && Model.Any())
            {
                <!-- League Header -->
                var league = Model.FirstOrDefault()?.league ?? "Unknown League";
                <div class="alert alert-info mb-4" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-trophy text-warning"></i> 
                        @league Rankings
                    </h4>
                    <p class="mb-0">Current standings and player rankings for @league</p>
                </div>

                <!-- Standings Table -->
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h5 class="mb-0">
                                    <i class="fas fa-medal"></i> 
                                    Official Rankings
                                </h5>
                            </div>
                            <div class="col-md-4 text-end">
                                <span class="badge bg-light text-dark">
                                    @Model.Count Players
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col" class="text-center">#</th>
                                        <th scope="col">Player</th>
                                        <th scope="col" class="text-center">Movement</th>
                                        <th scope="col" class="text-center">Country</th>
                                        <th scope="col" class="text-center">Points</th>
                                        <th scope="col" class="text-center">League</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var standing in Model)
                                    {
                                        var place = standing.place ?? "N/A";
                                        var isTopThree = place == "1" || place == "2" || place == "3";
                                        
                                        <tr class="@(isTopThree ? "table-warning" : "")">
                                            <td class="text-center">
                                                @if (place == "1")
                                                {
                                                    <span class="badge bg-warning text-dark fs-5">
                                                        <i class="fas fa-crown text-warning"></i> @place
                                                    </span>
                                                }
                                                else if (place == "2")
                                                {
                                                    <span class="badge bg-secondary fs-5">
                                                        <i class="fas fa-medal text-light"></i> @place
                                                    </span>
                                                }
                                                else if (place == "3")
                                                {
                                                    <span class="badge bg-warning text-dark fs-5">
                                                        <i class="fas fa-medal text-warning"></i> @place
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-dark fs-6">@place</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="player-info">
                                                        <strong class="fs-6">@(standing.player ?? "Unknown Player")</strong>
                                                        @if (standing.playerKey.HasValue)
                                                        {
                                                            <br><small class="text-muted">ID: @standing.playerKey</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                @if (!string.IsNullOrEmpty(standing.movement))
                                                {
                                                    @if (standing.movement.StartsWith("+"))
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-arrow-up"></i> @standing.movement
                                                        </span>
                                                    }
                                                    else if (standing.movement.StartsWith("-"))
                                                    {
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-arrow-down"></i> @standing.movement
                                                        </span>
                                                    }
                                                    else if (standing.movement == "0" || standing.movement == "=")
                                                    {
                                                        <span class="badge bg-secondary">
                                                            <i class="fas fa-minus"></i> =
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-info">@standing.movement</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (!string.IsNullOrEmpty(standing.country))
                                                {
                                                    <span class="badge bg-light text-dark">
                                                        <i class="fas fa-flag"></i> @standing.country
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (!string.IsNullOrEmpty(standing.points))
                                                {
                                                    <span class="badge bg-primary fs-6">@standing.points</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (!string.IsNullOrEmpty(standing.league))
                                                {
                                                    <span class="badge bg-info">@standing.league</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Statistics Summary -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-warning text-dark">
                            <div class="card-body text-center">
                                <h5 class="card-title">
                                    <i class="fas fa-crown"></i> #1 Player
                                </h5>
                                @{
                                    var topPlayer = Model.FirstOrDefault();
                                }
                                <h6 class="mb-0">@(topPlayer?.player ?? "N/A")</h6>
                                <small>@(topPlayer?.points ?? "0") Points</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-secondary text-white">
                            <div class="card-body text-center">
                                <h5 class="card-title">
                                    <i class="fas fa-medal"></i> #2 Player
                                </h5>
                                @{
                                    var secondPlayer = Model.Skip(1).FirstOrDefault();
                                }
                                <h6 class="mb-0">@(secondPlayer?.player ?? "N/A")</h6>
                                <small>@(secondPlayer?.points ?? "0") Points</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-dark">
                            <div class="card-body text-center">
                                <h5 class="card-title">
                                    <i class="fas fa-medal"></i> #3 Player
                                </h5>
                                @{
                                    var thirdPlayer = Model.Skip(2).FirstOrDefault();
                                }
                                <h6 class="mb-0">@(thirdPlayer?.player ?? "N/A")</h6>
                                <small>@(thirdPlayer?.points ?? "0") Points</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h5 class="card-title">
                                    <i class="fas fa-users"></i> Total Players
                                </h5>
                                <h3 class="mb-0">@Model.Count</h3>
                                <small>In Rankings</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Movement Statistics -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="fas fa-chart-line"></i> 
                                    Movement Statistics
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 text-center">
                                        @{
                                            var movedUp = Model.Count(s => !string.IsNullOrEmpty(s.movement) && s.movement.StartsWith("+"));
                                        }
                                        <div class="border rounded p-3">
                                            <h4 class="text-success mb-1">@movedUp</h4>
                                            <small class="text-muted">Players Moved Up</small>
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-center">
                                        @{
                                            var movedDown = Model.Count(s => !string.IsNullOrEmpty(s.movement) && s.movement.StartsWith("-"));
                                        }
                                        <div class="border rounded p-3">
                                            <h4 class="text-danger mb-1">@movedDown</h4>
                                            <small class="text-muted">Players Moved Down</small>
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-center">
                                        @{
                                            var noChange = Model.Count(s => string.IsNullOrEmpty(s.movement) || s.movement == "0" || s.movement == "=");
                                        }
                                        <div class="border rounded p-3">
                                            <h4 class="text-secondary mb-1">@noChange</h4>
                                            <small class="text-muted">No Change</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <h4 class="alert-heading">No Standings Available!</h4>
                    <p>There are currently no tennis standings available to display.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .card-header {
        font-weight: bold;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .fs-5 {
        font-size: 1.25rem !important;
    }
    
    .fs-6 {
        font-size: 1rem !important;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .table-warning {
        background-color: rgba(255, 193, 7, 0.1) !important;
    }
    
    .player-info {
        line-height: 1.2;
    }
    
    .border.rounded.p-3 {
        transition: all 0.3s ease;
    }
    
    .border.rounded.p-3:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('Standings page loaded');
            
            // Add click functionality for player names
            $('.player-info strong').click(function() {
                var playerName = $(this).text();
                alert('Player: ' + playerName);
            });
            
            // Add hover effects for top 3 players
            $('.table-warning').hover(
                function() {
                    $(this).addClass('shadow-sm');
                },
                function() {
                    $(this).removeClass('shadow-sm');
                }
            );
            
            // Add animation for movement badges
            $('.badge.bg-success, .badge.bg-danger').hover(
                function() {
                    $(this).addClass('animate__animated animate__pulse');
                },
                function() {
                    $(this).removeClass('animate__animated animate__pulse');
                }
            );
        });
    </script>
}
