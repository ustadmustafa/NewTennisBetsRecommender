@model merzigo.bms.tennis.Models.Odds.LiveOddsResponse
@{
    ViewData["Title"] = "Live Odds";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Live Tennis Odds</h2>
            
            @if (Model != null && Model.Result != null && Model.Result.Any())
            {
                @foreach (var matchOdds in Model.Result)
                {
                    var matchDetail = matchOdds.Value;
                    
                    <div class="card mb-4">
                        <div class="card-header bg-danger text-white">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h5 class="mb-0">
                                        <i class="fas fa-bolt"></i> 
                                        Live Match Odds - Match Key: @matchOdds.Key
                                        @if (matchDetail.EventLive == "1")
                                        {
                                            <span class="badge bg-warning text-dark ms-2">
                                                <i class="fas fa-circle text-danger" style="animation: pulse 1.5s infinite;"></i>
                                                LIVE
                                            </span>
                                        }
                                    </h5>
                                </div>
                                <div class="col-md-4 text-end">
                                    <small>@matchDetail.EventDate @matchDetail.EventTime</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Match Info -->
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(matchDetail.EventFirstPlayerLogo))
                                        {
                                            <img src="@matchDetail.EventFirstPlayerLogo" alt="Player 1" 
                                                 class="me-3" style="width: 40px; height: 40px; border-radius: 50%;">
                                        }
                                        <div>
                                            <h6 class="mb-0">Player 1</h6>
                                            <small class="text-muted">Key: @matchDetail.FirstPlayerKey</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center justify-content-end">
                                        <div class="text-end">
                                            <h6 class="mb-0">Player 2</h6>
                                            <small class="text-muted">Key: @matchDetail.SecondPlayerKey</small>
                                        </div>
                                        @if (!string.IsNullOrEmpty(matchDetail.EventSecondPlayerLogo))
                                        {
                                            <img src="@matchDetail.EventSecondPlayerLogo" alt="Player 2" 
                                                 class="ms-3" style="width: 40px; height: 40px; border-radius: 50%;">
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- Match Details -->
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <strong>Tournament:</strong> @matchDetail.TournamentName
                                </div>
                                <div class="col-md-4">
                                    <strong>Round:</strong> @matchDetail.TournamentRound
                                </div>
                                <div class="col-md-4">
                                    <strong>Season:</strong> @matchDetail.TournamentSeason
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(matchDetail.EventGameResult))
                            {
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <div class="alert alert-info">
                                            <strong>Current Score:</strong> @matchDetail.EventGameResult
                                            @if (!string.IsNullOrEmpty(matchDetail.EventWinner))
                                            {
                                                <br><strong>Winner:</strong> @matchDetail.EventWinner
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Live Odds Table -->
                            @if (matchDetail.LiveOdds != null && matchDetail.LiveOdds.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th scope="col">Odd Name</th>
                                                <th scope="col">Type</th>
                                                <th scope="col">Value</th>
                                                <th scope="col">Handicap</th>
                                                <th scope="col">Status</th>
                                                <th scope="col">Last Updated</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var odd in matchDetail.LiveOdds)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@odd.OddName</strong>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-primary">@odd.Type</span>
                                                    </td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(odd.Value))
                                                        {
                                                            <span class="fw-bold text-success">@odd.Value</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(odd.Handicap))
                                                        {
                                                            <span class="text-info">@odd.Handicap</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (odd.Suspended == "1")
                                                        {
                                                            <span class="badge bg-warning text-dark">
                                                                <i class="fas fa-pause"></i> Suspended
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-play"></i> Active
                                                            </span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(odd.Updated))
                                                        {
                                                            <small class="text-muted">@odd.Updated</small>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning" role="alert">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    No live odds available for this match.
                                </div>
                            }
                        </div>
                    </div>
                }
                
                <div class="mt-3">
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">Total Matches: @Model.Result.Count</small>
                        </div>
                        <div class="col-md-6 text-end">
                            <small class="text-muted">
                                Live Matches: @Model.Result.Count(m => m.Value.EventLive == "1")
                            </small>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <h4 class="alert-heading">No Live Odds Available!</h4>
                    <p>There are currently no live odds available to display.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    @@keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .card-header {
        font-weight: bold;
    }
    
    .fw-bold.text-success {
        font-size: 1.1em;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('LiveOdds page loaded');
            
            // Auto-refresh functionality for live odds
            setInterval(function() {
                // Add auto-refresh logic here if needed
                console.log('Checking for odds updates...');
            }, 30000); // Refresh every 30 seconds
            
            // Add click functionality for active odds
            $('.badge.bg-success').click(function() {
                var oddValue = $(this).closest('tr').find('.fw-bold.text-success').text();
                alert('Odd Value: ' + oddValue);
            });
        });
    </script>
}
